{
  "name": "nimipay-pos-gateway",
  "version": "1.0.0",
  "description": "NimiPay PoS Gateway with @nimiq/core integration",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "webpack --mode production",
    "dev": "webpack serve --mode development",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.js\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nimiq/core": "^1.5.8",
    "@nimiq/browser-utils": "^0.8.0",
    "localforage": "^1.10.0",
    "reef": "^12.0.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "stream-browserify": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/plugin-transform-modules-commonjs": "^7.22.0",
    "babel-jest": "^29.0.0",
    "babel-loader": "^9.1.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "setupFiles": [
      "<rootDir>/src/tests/setup.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
